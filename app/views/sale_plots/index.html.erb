 <section class="blog-grid-section" style="padding: 299px 0px 125px;">
      <div class="auto-container">
          
<div class="row clearfix">

            <!--News Block-->
            <% @plots.each do |plot|%>
                <div class="news-block col-md-4 col-sm-6 col-xs-12">
                    <div class="inner-box wow fadeInUp">
                        <div class="image">
                           <%= link_to image_tag("resource/news-8.jpg", border: 0), {action: 'index', controller: 'sale_plot_details'}, {class: 'dock-item'} %>
                        </div>
                        <div class="lower-content">
                             <h3><%= link_to "Luxury Plot in #{plot.town.name}",{"controller"=>"sale_plot_details", "action"=>"index", "id" => "#{plot.id}"}%></h3>
                            <div class="post-date">Price $<span><%= plot.total_price.to_i %></span></div>
                            <div class="text"><%= plot.description %></div>
                        </div>
                    </div>
                </div>
            <% end %>

        </div>            
            <!--Btn Box-->
            <div class="btn-box text-center">
              <a href="#" class="theme-btn btn-style-two">Load More</a>
            </div>
            
        </div>
    </section>